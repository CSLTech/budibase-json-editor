{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "json-editor",
    "friendlyName": "JSON Editor",
    "description": "JSON Editor (based on https://github.com/josdejong/svelte-jsoneditor)",
    "icon": "Brackets",
    "settings": [
      {
        "type": "select",
        "key": "fieldType",
        "label": "Field Type",
        "options": [{"label": "String", "value": "text"}, {"label": "JSON", "value": "json"}],
        "defaultValue": "String",
        "required": true
      },
      {
        "type": "field/string",
        "key": "fieldText",
        "label": "Field (String)"
      },
      {
        "type": "field/json",
        "key": "fieldJSON",
        "label": "Field (JSON)"
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label"
      },
      {
        "type": "text",
        "label": "Default Value",
        "key": "defaultValue"
      },
      {
        "type": "boolean",
        "label": "Read Only",
        "key": "readOnly"
      },
      {
        "type": "validation/string",
        "label": "Validation (String)",
        "key": "validationText"
      }
